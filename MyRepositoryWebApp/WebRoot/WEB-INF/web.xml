<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>MyRepositoryWebApp</display-name>
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
    <welcome-file>login.htm</welcome-file>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>PassUrls</param-name>
      <param-value>.css;.js;.jpg;.png</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>UserLoginFilter</filter-name>
    <filter-class>com.filter.UserLoginFilter</filter-class>
    <init-param>
      <param-name>PassUrls</param-name>
      <param-value>/admin/*;/login.jsp;/register.jsp;/LoginServlet;/RegisterServlet;.css;.js;.jpg;.png</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>UserLoginFilter</filter-name>
    <url-pattern>/user/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>AdminLoginFilter</filter-name>
    <filter-class>com.filter.AdminLoginFilter</filter-class>
    <init-param>
      <param-name>PassUrls</param-name>
      <param-value>/user/*;/login.jsp;/register.jsp;/LoginServlet;/RegisterServlet;.css;.js;.jpg;.png</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>AdminLoginFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping>
</web-app>